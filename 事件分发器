不使用c#的event关键字，只是使用delegate和hashtable进行事件分发。

public interface IEvent
{
  string type{get;set;}
  
  object target{get;set;}
}

public interface IEventDispatcher
{
  //参数多选eventtype,eventName,和eventId
  bool addEventListener(string eventType,EventDelegate delegate);
  
  bool addEventListener(string eventType,);
  
  public removeAllEventListeners();
  
  public bool dispatchEvent();
  
  bool hasEventListener(string eventType,EventDelegate delegate);
}

namespace 
{
  public delegate void EventDelegate(IEvent event);

  public enum EventDispatcherAddMode
  {
  }
  
  public class EventDispatcher : IEventDispatcher
  {
  }
  
 }
 
 
